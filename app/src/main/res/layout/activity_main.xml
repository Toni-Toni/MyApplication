<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ViewDemo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_fragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="FragmentDemo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_intentservice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="IntentServiceDemo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_handler"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:baselineAligned="false"
            android:text="handlerDemo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="NotificationDemo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_sql"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SQLiteDemo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_aidl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="AIDLDemo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_databinding"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DataBinding"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>